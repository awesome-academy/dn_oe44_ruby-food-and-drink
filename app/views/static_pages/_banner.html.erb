<div id="myCarousel" class="carousel slide" data-ride="carousel">
  <ol class="carousel-indicators">
    <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
    <li data-target="#myCarousel" data-slide-to="1"></li>
    <li data-target="#myCarousel" data-slide-to="2"></li>
  </ol>
  <div class="carousel-inner">
    <div class="item active">
      <%= image_tag("banner1.jpg", alt: :banner, class: "img-responsive") %>
    </div>
    <div class="item">
      <%= image_tag("banner2.jpg", alt: :banner, class: "img-responsive") %>
    </div>
    <div class="item">
      <%= image_tag("banner3.jpg", alt: :banner, class: "img-responsive") %>
    </div>
  </div>
  <a class="left carousel-control" href="#myCarousel" data-slide="prev">
    <span class="glyphicon glyphicon-chevron-left"></span></a><a class="right carousel-control"
    href="#myCarousel" data-slide="next"><span class="glyphicon glyphicon-chevron-right">
    </span></a>
  </div>
</div>
